 <BamlLocalization>

<!-- marcoda: specifying an alias to accomodate long UID names in Acrylic -->
<Namespace Name="Microsoft.Expression.Design.UserInterface.UserInterface" Alias="ExpressionUI"/>
   
<!-- ryanki: Custome GraphicDesigner controls -->
<Namespace Name="Microsoft.Expression.GraphicDesigner" Alias="">
	 <Group Name="Text">
	  <Localizability Target="MenuDefinition.Header" Category="Text"/>
	 </Group>
</Namespace>

<!-- ryanki: Custom Expression Controls: lOcalizable as per Chanv -->
     <Namespace Name="Microsoft.Expression.Framework.Data" Alias="">
       <Group Name="Text">
          <Localizability Target="StringEmptyToStringConverter.StringForEmptyString" Category="Text"/>
	        <Localizability Target="BoolToStringConverter.FalseString" Category="Text"/>
	        <Localizability Target="BoolToStringConverter.TrueString" Category="Text"/>
	        <Localizability Target="AppendSuffixConverter.Suffix" Category="Text"/>
       </Group>
     </Namespace>

<!-- ryanki: Custom Expression Controls: not lOcalizable as per Chanv -->
     <Namespace Name="Microsoft.Expression.Framework.Controls" Alias="">
       <Localizability Target="NumberBox.*" Modifiable="False" Readable="False"/>
       <Localizability Target="NumberComboBox.*" Modifiable="False" Readable="False"/>
     </Namespace>

     <Namespace Name="Microsoft.Expression.Utility.Diagnostics" Alias="">
       <Localizability Target="AutomationElement.Id" Category="None" Modifiable="False" Readable="False"/>
     </Namespace>

     <Namespace Name="Microsoft.Expression.Utility.ValueEditors.ColorEditor.Converters" Alias="">
       <Localizability Target="ColorToGradientConverter.Component" Modifiable="False" Readable="False"/>
     </Namespace>

     <Namespace Name="Microsoft.Expression.Utility.ValueEditors" Alias="">
       <Localizability Target="NumberEditor.Format" Modifiable="False" Readable="False"/>
     </Namespace>

     <Namespace Name="Microsoft.Expression.Web.Controls" Alias="">
       <Localizability Target="XWebButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="XWebComboBox.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="XWebDropdownButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="XWebMenuItem.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="XWebSplitButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="XWebTextBox.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberUndoRedoButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberTextbox.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberSplitButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberMRUSplitButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberMenuItem.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberDropdownPanelButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberDropdownButton.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberComboBox.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberColorPicker.CommandName" Modifiable="False" Readable="False"/>
       <Localizability Target="WebberButton.CommandName" Modifiable="False" Readable="False"/>
     </Namespace>

<!-- ryanki: removing from being parsed to cut non-translatable clutter -->
     <Group Name="FlowDirection">
        <Localizability Target="*.FlowDirection" Category="NeverLocalize"/>
     </Group> 

     <Group Name="Misc">
        <Localizability Target="*.*" />

	<Group Name="Automation">
           <Localizability Target="*.AutomationId" Category="Text" Readable="False" Modifiable="False" />
      </Group>    

     <Group Name="Language">
        <Localizability Target="*.Language" Category="Text" Readable="True" Modifiable="True"/>
     </Group> 

    <!-- Ryanki removing from being parsed as we do not want to localize fonts -->
      <Group Name="Font">
          <Localizability Target="*.FontFamily" Readable="True" Modifiable="True"/>
          <Localizability Target="*.FontSize" Readable="False" Modifiable="False"/>
          <Localizability Target="*.FontStretch" Readable="False" Modifiable="False"/>
          <Localizability Target="*.FontStyle" Readable="False" Modifiable="False"/>
          <Localizability Target="*.FontWeight" Readable="False" Modifiable="False"/>
      </Group>
 

      <Group Name="Hyperlink">
           <Localizability Target="*.NavigateUri" />
      </Group>    

      <Group Name="Text">
          <Localizability Target="*.Text" Category="Text"/>
          <Localizability Target="*.Title" Category="Text"/> 
          <Localizability Target="*.ToolTip"/>
          <Localizability Target="*.Gesture"/>
          <Localizability Target="*.Header" />
          <Localizability Target="*.WindowTitle"/> 
          <!-- v-piyi Parsing fontstyle per bug#85661 -->
          <Localizability Target="FrameworkElement.Tag" Category="Text"/>
      </Group>

      <Namespace Name="System.Windows" Alias="">
         <Group Name="Misc">
             <Localizability Target="Window.$Content" Readable="True"/>

<!-- ryanki: set Setter.Value category to Text so that when it is exposed by Localization Attribute in markup it will get pseudo-localized -->

             <Localizability Target="Setter.Value" Category="Text"/>

<!-- ryanki: removing from being parsed to cut non-translatable clutter -->

             <Localizability Target="ResourceDictionary.Source" Modifiable="False" Readable="False"/>
	     
        </Group>
      </Namespace>  

      <Namespace Name="System.Windows.Media.Imaging" Alias="">
             <Localizability Target="BitmapImage.UriSource" Modifiable="False" Readable="False"/>
      </Namespace>

<!-- Expose System.Windows.Control to localization-->
      <Namespace Name="System.Windows.Controls" Alias="">
        <Group Name="Text">
           <Localizability Target="Button.$Content" RecognizesAccessKey="true"/>
           <Localizability Target="Button.Content"  RecognizesAccessKey="true"/>
           <Localizability Target="ToggleButton.$Content" RecognizesAccessKey="true"/>
           <Localizability Target="ToggleButton.Content"  RecognizesAccessKey="true"/>
           <Localizability Target="RepeatButton.$Content" RecognizesAccessKey="true"/>
           <Localizability Target="RepeatButton.Content"  RecognizesAccessKey="true"/>
           <Localizability Target="HeaderedContentControl.Header" RecognizesAccessKey="true"/>
           <Localizability Target="Label.$Content" RecognizesAccessKey="true"/>
           <Localizability Target="Label.Content" RecognizesAccessKey="true"/>
           <Localizability Target="TextBlock.$Content" />
           <Localizability Target="TextBlock.Text" />
           <Localizability Target="TextBox.$Content" />
           <Localizability Target="TextBox.Text" />
           <Localizability Target="ToolTip.$Content"/>
           <Localizability Target="AccessText.Text" RecognizesAccessKey="True" />
           <Localizability Target="AccessText.$Content" RecognizesAccessKey="True" />
           <Localizability Target="CheckBox.$Content" RecognizesAccessKey="true"/>
           <Localizability Target="CheckBox.Content"  RecognizesAccessKey="true"/>
           <Localizability Target="ComboBox.$Content"/>
           <Localizability Target="ComboBoxItem.$Content"/>
           <Localizability Target="ContextMenu.$Content" RecognizesAccessKey="True"/>
           <Localizability Target="ContextMenu.Header" RecognizesAccessKey="True"/>
           <Localizability Target="MenuItem.InputGestureText"/>	   
           <Localizability Target="MenuItem.$Content" RecognizesAccessKey="True"/>	   
           <Localizability Target="MenuItem.Header" RecognizesAccessKey="True"/>
           <Localizability Target="Menu.Header" RecognizesAccessKey="True"/>
           <Localizability Target="RadioButton.$Content" RecognizesAccessKey="True"/>
           <Localizability Target="RadioButton.Content" RecognizesAccessKey="True"/>
           <Localizability Target="TabItem.Header" RecognizesAccessKey="True"/>
           <Localizability Target="HeaderedContentControl.$Content"/>
           <Localizability Target="HeaderedContentControl.Content"/>
           <Localizability Target="HeaderedItemsControl.Header" RecognizesAccessKey="True"/>
           <Localizability Target="HeaderedItemsControl.$Content"/>
           <Localizability Target="GridViewColumn.Header" Category="Text" Readable="True" Modifiable="True"/>
           <Localizability Target="ListBoxItem.$Content" Category="Text" Readable="True" Modifiable="True"/>
        </Group>
        
        <Group Name="Controls">
           <Localizability Target="Border.$Content" Category="None" Readable="True"/>	
           <Localizability Target="ContentControl.$Content" Readable="True"/>
           <Localizability Target="ControlTemplate.$Content" Readable="True"/>
           <Localizability Target="DockPanel.$Content" Category="None" Readable="True"/>
           <Localizability Target="ScrollViewer.$Content" Readable="True"/>
           <Localizability Target="Grid.$Content" Category="None" Readable="True"/>
       </Group>
       <Group Name="Font">
           <Localizability Target="*.TextDecorations"/>
       </Group>  
      </Namespace>
<!--End of Expose System.Windows.Control to localiation-->

      <Namespace Name="System.Windows.Controls.Primitives" Alias="">	
          <Group Name="Controls">
            <Localizability Target="Popup.$Content" />
          </Group>
          <Group Name="Text">
            <Localizability Target="*.ToolTip" />
          </Group>
      </Namespace>

      <Namespace Name="System" Alias="">
        <Group Name="SystemDouble">
         <Localizability Target="Double.$Content" Category="None" Readable="True" Modifiable="True"/>
        </Group>
        <Group Name="Text">
           <Localizability Target="String.$Content" Category="Text" Modifiable="True" Readable="True"/>  	                 </Group> 
      </Namespace>         
      
      <Namespace Name="System.Windows.Documents" Alias="">
        <Group Name="Text">
           <Localizability Target="TextPanel.$Content" /> 
        </Group>
      </Namespace>  
  </Group>
</BamlLocalization>