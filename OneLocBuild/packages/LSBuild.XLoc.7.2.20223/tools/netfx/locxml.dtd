<!ELEMENT	_locDefinition (_locDefault?, _locDefaultAttr?, _locTag*)>

<!ELEMENT 	_locDefault EMPTY>
<!ATTLIST	_locDefault _loc (locNone|locData|locFull)	"locData"
			_locEntity CDATA #IMPLIED
			_locID (useID|strict) "strict">

<!ELEMENT 	_locDefaultAttr EMPTY>
<!ATTLIST	_locDefaultAttr _loc (locNone|locData)	"locNone">

<!ELEMENT 	_locTag (#PCDATA)>
<!ATTLIST	_locTag	_loc (locNone|locData|locFull)	"locNone"
			_locIDAttr CDATA #IMPLIED			
			_locAttrData CDATA #IMPLIED>

