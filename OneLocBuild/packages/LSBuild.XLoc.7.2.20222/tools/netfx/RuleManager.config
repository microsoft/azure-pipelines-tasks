<configuration>
    <appSettings>
	<add key="OwnedComment" value="LcxAdmin" />
	<add key="OwnedCommentsExtension" value="Loc" />
	<add key="AddSpaceBetweenRules" value="True" />
	<add key="HelpLink" value="http://bgit/applications/help/LocStudio/" />
	<add key="CommentOwnerAccordingToTargetLanguage" value="False" />
	<add key="SettingsFile" value="%SDXROOT%\tools\locstudio\CommentingSettings.LSConfig" />
    </appSettings>
    <AdvisorSettings>
		<Pattern Name="Numbers" Enabled="False">
			<Setting Name="RegEx" Value="^((-?[0-9]+|-?[0-9]*\.[0-9]+)(%|px|pt|em|in)?|0x([0-9A-Fa-f]{2})+)[\r\n]*$" />
			<Setting Name="Exception" Category="Number;Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Button;Radio Button;HTML Text;Property;Style;Menu Item" Comment="{Locked};DisplayOnlyString;DisplayString;{@DisplayString@}" />
			<Setting Name="Description" Value="The string resource is a number (float, integer, hex, or number followed by a unit like %, px, pt, em, or in). Proper commenting and context information is required for localization to apply proper translation. Number that should not be localized should be locked." />
			<Setting Name="Yes" Value="Number" Rule="{StringCategory='Number'};{Locked};{@DisplayString@}" Context="FontSize;Width;Height;Margin" />
		</Pattern>
		<Pattern Name="Account Name" Enabled="False">
			<Setting Name="RegEx" Value="^(?i)((NT AUTHORITY|BUILTIN)\\)?(Administrator|Guest|Domain Admins|Domain Users|Administrators|Server Operators|Power Users|Users|Guests|Account Operators|Print Operators|Backup Operators|Replicator|Domain Guests|Domain Computers|Domain Controllers|Schema Admins|Cert Publishers|Enterprise Admins|RAS and IAS Servers|Group Policy Creator Owners|Everyone|Remote Desktop Users|Administrators|Anonymous Logon|Network Configuration Operators|Incoming Forest Trust Builders|Performance Monitor Users|Performance Log Users|Windows Authorization Access Group|Network Service|Enterprise Domain Controllers|Terminal Server License Servers|Trusted Installers|Distributed COM Users|IIS_IUSRS|System|Cryptographic Operators|Event Log Readers|Local Service|DHCP Administrators|DHCP Users|BUILTIN|SYSTEM|LOCALSYSTEM|NETWORKSERVICE|LOCALSERVICE|IIS_IUSRS|Centro Servers|Remote Users|Offer Remote Assistance Helpers|Session Directory Computers|Session Broker Computers)(%0|\00|\n|\r|%n)*$" />
			<Setting Name="Exception" Category="Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item" Comment="{Locked}" />
			<Setting Name="Description" Value="Description	String resources that implement (network) account name must be properly commented to avoid localization bugs, such as the ones caused by the used of forbiden characters. Non-localizable account name must be locked." />
			<Setting Name="Yes" Rule="{@AccountName@=s'*'};{@GroupAccountName@=s'*'};{Locked}" />
		</Pattern>
		<Pattern Name="HTML Properties" Enabled="False">
			<Setting Name="RegEx" Value="^(?i)(ltr|left|center|right|justify|inherit|baseline|sub|super|text-bottom|text-top|middle|top|bottom|inherit|bold|normal|lighter|bolder|[1-9]00|inherit|red|white|black|yellow|green|blue)$" />
			<Setting Name="Exception" Category="Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item" Comment="{Locked}" />
			<Setting Name="Description" Value="A few categories of HTML properties need to be localized. Minimum requirement is to set string category to 'Property'. Non-localizable attributes must be locked." />
			<Setting Name="Yes" Value="HTML Property" Rule="{StringCategory=&quot;Property&quot;};{@HTML_prop_Align@=s'*'}{StringCategory=&quot;Property&quot;};{@HTML_prop_VAlign@=s'*'}{StringCategory=&quot;Property&quot;};{@HTML_prop_FontWeight@=s'*'}{StringCategory=&quot;Property&quot;};{@HTML_prop_FontStyle@=s'*'}{StringCategory=&quot;Property&quot;};{@HTML_prop_Color@=s'*'}{StringCategory=&quot;Property&quot;};{@HTML_prop_Direction@=s'*'}{StringCategory=&quot;Property&quot;};{Locked}" Context="" />
		</Pattern>
		<Pattern Name="Contains date time format" Enabled="False">
			<Setting Name="RegEx" Value="(?&lt;![&amp;aeouiAEOUICBFPLNnXKWRTHrg_V0-9])(MM|dd|DD|gg|mm|SS|hh)(?![&amp;aeouiAEOUICTXLKFRrBclkpoP0-9])|MMM+|mmm+|DDD+|ddd+|(yy)+|HH|([.,;:'/ ]|^)(h|mm|tt|ss|y)([.,;:'/ ]|$)|([.,;:/ ]|^)(s|m)([.,;:'/ ]|$)|([.,;:/' ]|^)d([.,;:/ ]|$)|^[dDhHmMsyY]$" />
			<Setting Name="Exception" Category="Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item" />
			<Setting Name="Description" Value="Developer must avoid using explicit date time format when possible. The date time format template should be read from user's date time format settings, instead." />
		</Pattern>
		<Pattern Name="Contains UI items" Enabled="False">
			<Setting Name="RegEx" Value="[^&amp;]*\&amp;[a-zA-Z]" />
			<Setting Name="Exception" Category="Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item;Check Box;Custom Control;Group Box Text" />
			<Setting Name="Description" Value="The string seems to contain hot key definition (&amp;). Developers should avoid using dynamic UI when possible. Dynamic UI that are statically sized are very difficult to resize as the length of the string is unknown at design time." />
		</Pattern>
		<Pattern Name="Single word" Enabled="False">
			<Setting Name="RegEx" Value="^[A-Z][a-z]+$" />
			<Setting Name="Exception" Category="Font Name;Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item;Font Name;Comment;Address;Custom Control;Check Box;Group Box Text;Progress Bar;Tab Control" Comment="{Locked}" />
			<Setting Name="Description" Value="Developer should provide context information as to where the word is being displayed or used when the single word is used in or as a display string. The word should be properly commented (protected) when the single word implements a specific string resource type, e.g. font name, html property, or an enum." />
		</Pattern>
		<Pattern Name="Text fragments" Enabled="False">
			<Setting Name="RegEx" Value="^[a-z]\w\b?.*|^[ ]+[a-z]\w\b?.*|\w+\b*[ ]$" />
			<Setting Name="Exception" Category="Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item;Font Name;Comment;Address;Folder Name;File Name;Check Box;Custom Control;Group Box Text;Tab Control" Comment="{Locked}" />
			<Setting Name="Description" Value="String looks like sentense that starts with space, all lower case word, or ends with space. Such strings may be run-time concatenated strings. Developers should avoid using strings that are hard concatenated as they may not be properly translated. Also, context information MUST be provided to link fragments together in order to provide proper context for translation." />
		</Pattern>
		<Pattern Name="Single char" Enabled="False">
			<Setting Name="RegEx" Value="^.(%0|%r|%n)*$" />
			<Setting Name="Exception" Category="Number;Static Text;Group Box;Combo Box;Dialog Item;Dialog Title;Accelerator;Button;Radio Button;HTML Text;Property;Style;Menu Item;Comment;Check Box;Custom Control" Comment="{Locked}" />
			<Setting Name="Description" Value="This string is a single char. Single chars are difficult to translate without context. Use {StringCategory='Accelerator'} and proper context to indicate that the char may be translated into an other char. Also, make sure to provide context information to link the char to its application context." />
			<Setting Name="Question" Value="Is this an accelerator key?" />
			<Setting Name="Yes" Value="Accelerator" Rule="{StringCategory=&quot;Accelerator&quot;};{Locked}" Context="AcceleratorKey;ResponseKey" />
		</Pattern>
		<Pattern Name="LCID Decimal" Enabled="False">
			<Setting Name="RegEx" Value="^1033$" />
			<Setting Name="Description" Value="String representing LCID = 1033. The LCID needs to be translated to the proper LCID of the target language." />
			<Setting Name="Yes" Rule="{ValidStrings=@LCID@}" />
		</Pattern>
		<Pattern Name="LCID en-us" Enabled="False">
			<Setting Name="RegEx" Value="^en-us$" />
			<Setting Name="Description" Value="String representing LCID in [lang-country] format in all lower case format, e.g. en-us." />
			<Setting Name="Yes" Rule="{ValidStrings=@rfc3066@}" />
		</Pattern>
		<Pattern Name="LCID en-US" Enabled="False">
			<Setting Name="RegEx" Value="^en-US$" />
			<Setting Name="Description" Value="String representing LCID in [lang-COUNTRY] format in all lower case format, e.g. en-US." />
			<Setting Name="Yes" Rule="{ValidStrings=@Rfc3066@}" />
		</Pattern>
		<Pattern Name="LCID en" Enabled="False">
			<Setting Name="RegEx" Value="^en$" />
			<Setting Name="Description" Value="String representing LCID in 2 letter language format in all lower case format, e.g. en." />
			<Setting Name="Yes" Rule="{ValidStrings=@iso639_1@}" />
		</Pattern>	
		<Pattern Name="Font - UI Font Face" Enabled="False">
			<Setting Name="RegEx" Value="(?i)^(Calibri|Verdana( Bold)?|Franklin Gothic( Medium)?|Helvetica(-Narrow)?|Georgia|Comic Sans( MS)?|Lucida Sans Unicode|MS PGothic|Tahoma( Bold)?|Arial( Unicode MS| Narrow)?|Courier( New)?|Lucida Console|Marlett|MS Reference Specialty|MS Reference Sans Serif|Symbol|Times|Wingdings|Bookshelf symbol 7|Segoe( UI| Print| Script| Media Center( Semibold| Light)?)?|MS Shell Dlg( 2)?|Wingdings|Trebuchet|Courier New|Times New Roman|Marlett|FORTEZZA|(Microsoft |MS )?(Sans Serif|Gothic)|sans-serif|Trebuchet MS|Palatino( Linotype)?|Corbel|Constantia|Book Antiqua|Bookman( Old Style)?|(Century|Franklin)( Gothic| Schoolbook)?|Monotype( Corsiva| Sorts)?|AvantGarde|NewCenturySchlbk|Zapf(Chancery|Dingbats))$" />
			<Setting Name="Description" Value="Font name needs to be adapted for certain languages. Font names that controls the display should be commented. Marlett may be locked if used only to display arrows chars for custom controls." />
			<Setting Name="Yes" Rule="{StringCategory='Font Name'}" />
			<Setting Name="Exception" Category="Font Name" Comment="{StringCategory='Font Name'}" />
		</Pattern>
		<Pattern Name="Font - List" Enabled="False">
			<Setting Name="RegEx" Value="(?i)^([ ]*['&quot;]?(Calibri|Verdana( Bold)?|Franklin Gothic( Medium)?|Helvetica(-Narrow)?|Georgia|Comic Sans( MS)?|Lucida Sans Unicode|MS PGothic|Tahoma( Bold)?|Arial( Unicode MS| Narrow)?|Courier( New)?|Lucida Console|Marlett|MS Reference Specialty|MS Reference Sans Serif|Symbol|Times|Wingdings|Bookshelf symbol 7|Segoe( UI| Print| Script| Media Center( Semibold| Light)?)?|MS Shell Dlg( 2)?|Wingdings|Trebuchet|Courier New|Times New Roman|Marlett|FORTEZZA|(Microsoft |MS )?(Sans Serif|Gothic)|sans-serif|Trebuchet MS|Palatino( Linotype)?|Corbel|Constantia|Book Antiqua|Bookman( Old Style)?|(Century|Franklin)( Gothic| Schoolbook)?|Monotype( Corsiva| Sorts)?|AvantGarde|NewCenturySchlbk|Zapf(Chancery|Dingbats))[&amp;&quot;']?[ ]*[,;]*){2,}$" />
			<Setting Name="Description" Value="Localized font name need to be preprended to the list" />
			<Setting Name="Exception" Category="Font Name" Comment="{StringCategory='Font Name'}" />
			<Setting Name="Yes" Rule="{StringCategory='Font Name'}" />
		</Pattern>		
		<Pattern Name="FileFilter string (|)" Enabled="False">
			<Setting Name="RegEx" Value="^[^\|]*\|[ ]*\*[^\|]*\|*[ ]*(\|[^\|]*\|[ ]*\*[^\|]*\|*[ ]*)*$" />
			<Setting Name="Description" Value="String representing filefilter list (terminated or not terminated by separator) Foo (*.foo)| *.foo; *.goo|Bar|*.bar|Hgl|*.hl  or Foo (*.foo)| *.foo; *.goo|Bar|*.bar|Hgl|*.hl|| list with every other element as file extension pattern" />
			<Setting Name="Yes" Rule="{@FileFilter@='|'}" />
			<Setting Name="Exception" Comment="{split=;{Split=;{@FileFilter@=" />
		</Pattern>
		<Pattern Name="FileFilter string (#)" Enabled="False">
			<Setting Name="RegEx" Value="^[^#]*#[ ]*\*[^#]*#*[ ]*(#[^#]*#[ ]*\*[^#]*#*[ ]*)*$" />
			<Setting Name="Description" Value="String representing filefilter list (terminated or not terminated by separator) Foo (*.foo)# *.foo; *.goo#Bar#*.bar#Hgl#*.hl  or Foo (*.foo)# *.foo; *.goo#Bar#*.bar#Hgl#*.hl## list with every other element as file extension pattern" />
			<Setting Name="Yes" Rule="{@FileFilter@='#'}" />
			<Setting Name="Exception" Comment="{split=;{Split=;{@FileFilter@=" />
		</Pattern>
		<Pattern Name="FileFilter string (NULL)" Enabled="False">
			<Setting Name="RegEx" Value="^[^\0]*\0[ ]*\*[^\0]*\0*[ ]*(\0[^\0]*\0[ ]*\*[^\0]*\0*[ ]*)*$" />
			<Setting Name="Description" Value="String representing filefilter list (terminated or not terminated by separator) Foo (*.foo)(NULL) *.foo; *.goo(NULL)Bar(NULL)*.bar(NULL)Hgl(NULL)*.hl  or Foo (*.foo)(NULL) *.foo; *.goo(NULL)Bar(NULL)*.bar(NULL)Hgl(NULL)*.hl(NULL)(NULL) list with every other element as file extension pattern" />
			<Setting Name="Yes" Rule="{@FileFilter@='\0'}" />
			<Setting Name="Exception" Comment="{split=;{Split=;{@FileFilter@=" />
		</Pattern>
		<Pattern Name="HTML Tags with attributes" Enabled="False">
			<Setting Name="RegEx" Value="(?i)&lt;[a-z][a-z0-9_]*[^\'\&quot;&gt;]*([\&quot;\'][^\&quot;\']+[\&quot;\'])+&gt;" />
			<Setting Name="Description" Value="HTML tags are in general automatically protected by LocRule, all the attributes are locked by default. Localization engineer or developer may use the proposed commenting below if attributes need to be exposed to localization. Please also make sure that the attributes that should not be localized are locked and the ones that are localizable have the proper commenting to enforce the constrain on the attribute value. Check http://localizability/contents/cmt/language/cookbook.asp#Markup for more information." />
			<Setting Name="Yes" Rule="{@UnlockHTMLAttribute@}" />
		</Pattern>
		<Pattern Name="URIs and HTML links" Enabled="False">
			<Setting Name="RegEx" Value="^(?i)(https?|ftp|gopher|file|res|mshelp)://[a-zA-Z0-9].+$" />
			<Setting Name="Exception" Category="Address;File Name" Comment="{Locked}" />
			<Setting Name="Description" Value="Localizable URLs or URIs should be avoided when possible. Forward links should be used and locked. Please check http://localizability/Contents/Localizability/Practices/Strings/BasicStringResourceTypes.asp#URIS for more information. Localizable URLs or URIs should have string category set to &quot;Address&quot;" />
			<Setting Name="Yes" Rule="{StringCategory='Address'};{Locked}{StringCategory='Address'}" />
		</Pattern>
		<Pattern Name="File name with extension" Enabled="False">
			<Setting Name="RegEx" Value="^[a-zA-Z][^/:*?&quot;&lt;&gt;|]+(\.[a-zA-Z][a-z0-9A-Z]*)+$" />
			<Setting Name="Description" Value="File name, including long file name. Display filenames may be localized. Physical filenames should not be localized to support MUI. {Locked} should be used when the file name should be localized. {FileName=&quot;LFNLocalizable&quot;} should be used when the file name may be localized." />
			<Setting Name="Exception" Category="Address;File Name;Version" Comment="{Locked}" />
			<Setting Name="Yes" Rule="{FileName=&quot;LFNLocalizable&quot;};{Locked}" />			
		</Pattern>
		<Pattern Name="Lists and arrays" Enabled="False">
			<Setting Name="RegEx" Value="^[^|\r\n]*(\|[^\r\n ][^|\r\n]*\|*)+$|^[^;\r\n]+(\;[^\r\n ][^;\r\n]*\;*)+$|^[^\t]+(\t[^ ][^\t\r\n]*\t*)+$|^[^`]+(`[^ ][^`]*`*)+$|^[^\0]+(\0[^ ][^\0]*\0*)+$" />
			<Setting Name="Description" Value="The string contains a repetition of separators ,;|[TAB][NULL]. The string may implements an array of elements. Please this type of complex structure when possible. See http://localizability/contents/cmt/language/cookbook.asp#Array for more information." />
			<Setting Name="Exception" Comment="{split=;{Split=;{@FileFilter@=" />
		</Pattern>
    </AdvisorSettings>
</configuration>
