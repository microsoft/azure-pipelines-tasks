<configuration>
  <configSections>
    <section name="extensions" type="System.Configuration.IgnoreSectionHandler"/>
  </configSections>
  <startup>
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral"/>
        <bindingRedirect oldVersion="7.0.0.0" newVersion="13.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Resources.Extensions" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="4.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <appSettings>
    <!-- Set reporting level for Info, Warning and Error.-->
		<add key="Reporter_EnableErrors" value="true" />
		<add key="Reporter_EnableWarnings" value="true" />
		<add key="Reporter_EnableInfos" value="true" />
		<add key="Reporter_EnableFrames" value="true" />
		<add key="Reporter_EnableDevInfos" value="true" />
		<add key="Reporter_WarningsAsErrors" value="false" />
    <add key="Reporter_WarningLevel" value="4" />
    <!-- This is the prefix appended to all messages (Errors, Warnings, Infos) that are issued by LSBuild.-->
    <add key="Message_Prefix" value="LSBuild : " />
    <!-- Settings for Migration of Comments from 1.0 Lcx Format and EDB 4.6 format to Lcx 2.0 Format-->
    <add key="EmbeddedCommentTagsToMigrate" value="Dev,LcxAdmin,Lcx,Gen" />
    <add key="OverrideUntaggedCommentsAs" value="" />
    <add key="LcxUpgradeMaximumOwnership" value="LcxAdmin,Lcx" />
    <!-- Settings for Comment Ownership. -->
    <!-- This minimum ownership is applied after all commenting files have been merged during Parse or Generate.-->
    <add key="ParseMinimumCommentOwnership" value="Dev,Rccx,LcxAdmin"/>
    <!-- This minimum ownership is applied when exporting Edb2Lcl.-->
    <add key="Edb2LclMinimumCommentOwnership" value="Dev,Rccx,LcxAdmin,Note"/>
    <!-- This is a list of parser ID's for which Update should recover translations based on string content
			 This is simmilar to the LSClient support for IDLess Update in POMHTML but for the specified list of parsers.-->
    <!-- <add key="Splice_ParserIds_for_StringExactMatch" value="22,210"/>-->
    <!-- Recover translations for POMHTML and POMXML -->
    <add key="Splice_ParserIds_for_StringExactMatch" value="None"/>
    <!-- Do not attempt to recover translations -->
    <!-- This controls PE file authenticode signature detection mode for generate command. Allowed values are as follows:
			None = do not check for signatures
			Warn = check for signatures and issue level 2 warning if found but continue generation
			Error = check for signatures and issue error and stop generation -->
    <!-- <add key="PEFileSignatureDetectionMode" value="Error" /> -->

    <!-- enable/disable enhanced logging for string reversal (error BL1020 and Warning BL1021) 
         Note: The enhanced logging requires Warning level 4. No enhanced logging for Warning level 1, 2 or 3 (-w 1|2|3)  -->
    <add key="EnableEnhancedLogging" value="false" />
    <!-- data columns used for the enhanced logging (case sensitive)
         all possible values:
         "Culture,FileName,ResId,Source,Target,Custom1,Custom2,Custom3,Custom4,Custom5,Custom6,TextLock,ApprovalStatus,AutoApproved,ConfidenceLevel,TranslationOrigin,InstrAtt,TextLocStatus,ParserId,Mnemonic,HasBinary,ItemIdStringId,ItemTypeStringId,StringCategory,Instructions,InstructionsEnabled,TermNotes,PropertyBag"
         default:
         "Culture,FileName,ResId,Source,Target,ApprovalStatus,TranslationOrigin,TextLocStatus,Custom3"
    -->
    <add key="LogColumnsEnhancedLogging" value="Culture,FileName,ResId,Source,Target,ApprovalStatus,TranslationOrigin,TextLocStatus,Custom3" />
    <!-- Add all settings loaded with the /s|/sr option to the INFO_TELEMETRY_PARSE=BL1052 and INFO_TELEMETRY_GENERATE=BL1053 events. -->
    <add key="AddSettingsToTelemetry" value="false" />
    <!-- If set to false, generate of the file will be skipped. Also see INFO_TELEMETRY_OUTPUTFILE_EXISTS=Info|BL|1053 event. -->
    <add key="OverwriteOutputfile" value="true" />
    <!-- The retry count for the parse command. Valid range is 0..4 -->
    <add key="ParseRetryCount" value="2" />
    <!-- The delay between retries for the parse command. Default is 100ms, valid range is 10ms..10000ms -->
    <add key="ParseRetryDelayInMs" value="1000" />
    <!-- The retry count for the generate command. Valid range is 0..4 -->
    <add key="GenerateRetryCount" value="2" />
    <!-- The delay between retries for the generate command. Default is 100ms, valid range is 10ms..10000ms -->
    <add key="GenerateRetryDelayInMs" value="1000" />
  </appSettings>
</configuration>
