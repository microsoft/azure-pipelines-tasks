      "visibleRule": "msbuildLocationMethod = version",
      "options": {
        "x86": "MSBuild x86",
        "x64": "MSBuild x64"
      }
    },
    {
      "name": "msbuildLocation",
      "type": "string",
      "label": "ms-resource:loc.input.label.msbuildLocation",
