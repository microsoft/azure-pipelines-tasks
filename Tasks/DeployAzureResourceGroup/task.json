{
    "id": "94A74903-F93F-4075-884F-DC11F34058B4",
    "name": "DeployAzureResourceGroup",
    "friendlyName": "Deploy Azure Resource Group",
    "description": "Provision and Deploy an Azure Resource Group",
    "category": "Deploy",
    "visibility": [
                "Preview",
                "Build",
                "Release"
                  ],
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 6,
        "IsTest": false
    },
    "demands": [
        "azureps"
    ],
    "minimumAgentVersion": "1.82.0",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "ConnectedServiceName",
            "type": "connectedService:Azure",
            "label": "Azure Subscription",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Azure subscription under which the Resource Group is deployed."
        },
        {
            "name": "location",
            "type": "pickList",
            "label": "Location",
            "defaultValue": "East US",
            "required": true,
            "helpMarkDown": "Location of the deployment",
            "options": {
                "East US": "East US",
                "West US": "West US",
                "West Europe": "West Europe",
                "East Asia": "East Asia",
                "Southeast Asia": "Southeast Asia"
            },
            "properties": {
                "EditableOptions": "True" 
            }
        },
        {
            "name": "resourceGroupName", 
            "type": "string", 
            "label": "Resource Group",
            "required": true
        },
        { 
            "name": "csmFile", 
            "type": "filePath", 
            "label": "Template", 
            "defaultValue":"",
            "required": true,
            "helpMarkDown": "Specify the path to the Azure Resource Manager template."
        },
        {
            "name": "csmParametersFile",
            "type": "filePath",
            "label": "Template Parameters",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Specify the path for the parameters corresponding to the template."
        },
        {
            "name": "dscDeployment",
            "type": "boolean",
            "label": "Generate SAS token",
            "required": false,
            "defaultValue": "false",
            "groupName": "advanced",
            "helpMarkDown": "Generates SAS token for the Azure blob that is used in the template. Useful if the SAS token expires quickly."
        },
        {
            "name": "moduleUrlParameterName",
            "type": "string",
            "label": "Azure Blob Parameter",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "Name of the parameter corresponding to the Azure blob.",
            "visibleRule": "dscDeployment = true"
        },
        {
            "name": "sasTokenParameterName",
            "type": "string",
            "label": "SAS Token Parameter",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "Name of the SAS token parameter.",
            "visibleRule": "dscDeployment = true"
        },
        {
            "name": "vmCreds",
            "type": "boolean",
            "label": "Virtual Machine Credentials",
            "required": false,
            "defaultValue": "false",
            "groupName": "advanced",
            "helpMarkDown": "These VM resource's credentials are used by some of the deployment and test tasks. The username and password should be same for all the Virtual Machines."
        },
        {
            "name": "vmUserName",
            "type": "string",
            "label": "Username",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced",
            "visibleRule": "vmCreds = true"
        },
        {
            "name": "vmPassword",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced",
            "visibleRule": "vmCreds = true"
        },
        {
            "name": "configurePowerShellPorts",
            "type": "boolean",
            "label": "Configure PowerShell Ports",
            "required": false,
            "defaultValue": "false",
            "groupName": "advanced",
            "helpMarkDown": "Configure PowerShell Ports"
        },
        {
            "name": "protocol",
            "type": "pickList",
            "label": "Network Protocol",
            "defaultValue": "WinRM HTTPS",
            "required": true,
            "helpMarkDown": "Network Protocol for WinRM configuration",
            "groupName": "advanced",
            "visibleRule": "configurePowerShellPorts = true",
            "options": {
                "WinRM HTTPS": "WinRM HTTPS",
                "WinRM HTTP": "WinRM HTTP",
                "Both": "Both"
            }
        },
        {
            "name": "certificatePath",
            "type": "filePath",
            "label": "Certificate",
            "defaultValue": "",
            "required": true,
            "groupName": "advanced",
            "visibleRule": "configurePowerShellPorts = true",
            "helpMarkDown": "Specify the Certificate path."
        },
        {
            "name": "certificatePassword",
            "type": "string",
            "label": "Certificate Password",
            "defaultValue": "",
            "required": true,
            "groupName": "advanced",
            "visibleRule": "configurePowerShellPorts = true"
        },
        {
            "name": "azureKeyVaultName",
            "type": "string",
            "label": "Azure Key Vault Name",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced",
            "visibleRule": "configurePowerShellPorts = true",
            "helpMarkDown": "Azure KeyVault Name."
        },
        {
            "name": "azureKeyVaultSecretName",
            "type": "string",
            "label": "Azure Key Vault Secret Name",
            "defaultValue": "",
            "required": false,
            "groupName": "advanced",
            "visibleRule": "configurePowerShellPorts = true",
            "helpMarkDown": "Azure KeyVault Secret Name."
        }
    ],
    "instanceNameFormat": "Azure Deployment: $(resourceGroupName)",
  "execution": {
    "AzurePowerShell": {
      "target": "$(currentDirectory)\\DeployAzureResourceGroup.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
