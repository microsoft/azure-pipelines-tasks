{
    "id": "D9BAFED4-0B18-4F58-968D-86655B4D2CE9",
    "name": "CmdLine",
    "friendlyName": "Command Line",
    "description": "Run a command line with arguments",
    "category": "Utility",
    "visibility": [
                  "Build",
                  "Release"
                  ],    
    "author": "Microsoft Corporation",
    "version": {
        "Major": 1,
        "Minor": 0,
        "Patch": 6
    },
    "groups": [
    {
      "name": "advanced",
      "displayName": "Advanced",
      "isExpanded": false
    }
    ],
    "inputs": [
        { 
            "name": "filename", 
            "type": "string", 
            "label": "Tool", 
            "defaultValue": "", 
            "required": true,
            "helpMarkDown": "Tool name to run.  Tool should be in path or resolvable via which.  Optionally, a fully qualified path can be supplied but that relies on that being present on the agent."
        },
        { 
            "name": "arguments", 
            "type": "string", 
            "label": "Arguments", 
            "defaultValue": "", 
            "required": false 
        },
        { 
            "name": "workingFolder", 
            "type": "filePath", 
            "label": "Working folder", 
            "defaultValue": "", 
            "required": false,
            "helpMarkDown": "Arguments passed to the tool",
            "groupName":"advanced"
        },
        { 
            "name": "errorPattern", 
            "type": "string", 
            "label": "Error Pattern", 
            "defaultValue": "", 
            "required": false,
            "helpMarkDown": "Optional regex to interpret output as an error.",
            "groupName":"advanced"
        },
        {
            "name": "warningPattern",
            "type": "string",
            "label": "Warning Pattern",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Optional regex to interpret output as a warning.",
            "groupName": "advanced"
        },
        { 
            "name": "failOnStandardError", 
            "type": "boolean",
            "label": "Fail on Standard Error", 
            "defaultValue": "true", 
            "required": false,
            "helpMarkDown": "If this is true, this task will fail if any errors are written to the StandardError stream.",
            "groupName":"advanced"
        }
    ],
    "instanceNameFormat": "Run $(filename)",
    "execution": {
        "Process": {
            "target": "$(filename)",
            "argumentFormat": "$(arguments)",
            "workingDirectory": "$(workingFolder)",
            "errorPattern": "$(errorPattern)",
            "warningPattern": "$(warningPattern)",
            "failOnStandardError": "$(failOnStandardError)"
        },
        "JavaScript": {
            "target": "processRunner.js",
            "argumentFormat": ""
        }
    }
}