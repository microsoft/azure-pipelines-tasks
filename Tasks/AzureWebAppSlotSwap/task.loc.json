    {
      "name": "TargetSlot",
      "type": "pickList",
      "label": "ms-resource:loc.input.label.TargetSlot",
      "defaultValue": "",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "ms-resource:loc.input.help.TargetSlot",
      "visibleRule": "SwapWithProduction = false"
    },
    {
      "name": "PreserveVnet",
      "type": "boolean",
      "label": "ms-resource:loc.input.label.PreserveVnet",
      "defaultValue": "false",
      "required": false
    }
