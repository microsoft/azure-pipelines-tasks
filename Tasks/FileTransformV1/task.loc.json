  "visibility": [
    "Build",
    "Release"
  ],
  "preview": "true",
  "runsOn": [
    "Agent",
    "DeploymentGroup"
  ],
  "version": {
    "Major": 1,
    "Minor": 0,
    "Patch": 2
  },
  "instanceNameFormat": "ms-resource:loc.instanceNameFormat",
  "groups": [
    {
      "name": "WebAppConfigurations",
      "displayName": "ms-resource:loc.group.displayName.WebAppConfigurations",
      "isExpanded": true
    }
  ],
  "inputs": [
    {
      "name": "folderPath",
      "type": "filePath",
      "label": "ms-resource:loc.input.label.folderPath",
      "defaultValue": "$(System.DefaultWorkingDirectory)/**/*.zip",
      "required": true,
      "helpMarkDown": "ms-resource:loc.input.help.folderPath"
    },
    {
      "name": "enableXmlVariableSubstitution",
      "type": "boolean",
      "label": "ms-resource:loc.input.label.enableXmlVariableSubstitution",
      "required": false,
      "defaultValue": false,
      "groupName": "WebAppConfigurations",
      "helpMarkDown": "ms-resource:loc.input.help.enableXmlVariableSubstitution"
    },
    {
      "name": "enableXmlTransform",
      "type": "boolean",
      "label": "ms-resource:loc.input.label.enableXmlTransform",
      "required": false,
      "defaultValue": false,
      "groupName": "WebAppConfigurations",
      "helpMarkDown": "ms-resource:loc.input.help.enableXmlTransform"
    },
    {
      "name": "transformationRules",
      "type": "multiLine",
      "label": "ms-resource:loc.input.label.transformationRules",
      "defaultValue": "",
      "required": false,
      "groupName": "WebAppConfigurations",
      "helpMarkDown": "ms-resource:loc.input.help.transformationRules",
      "visibleRule": "enableXmlTransform == true"
    },
    {
      "name": "JSONFiles",
      "type": "multiLine",
      "label": "ms-resource:loc.input.label.JSONFiles",
      "required": false,
      "defaultValue": "",
      "helpMarkDown": "ms-resource:loc.input.help.JSONFiles"
    }
  ],
  "execution": {
    "Node": {
      "target": "filetransform.js",
      "argumentFormat": ""
