{
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "member-ordering": [ false ],
        "interface-name": [ false ],
        
        // lots of objects in this package are sorted by file order 
        "object-literal-sort-keys": false,
         "whitespace": [
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type"
        ],
        
        "one-line": [
            "check-open-brace",
            "check-whitespace"
        ]
    }
} 